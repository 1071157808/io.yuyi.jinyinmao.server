@{
    Layout = "~/_layout/user/_SiteMain.cshtml";
    Page.Title = "重置支付密码";
    Page.RequireMain = CatHelper.JsWrapper("<script src='/static/js/user/reset/payment.js'></script>");
    dynamic userInfo = Request.GetData("/UserInfo");
    CatHelper.SignInCheck(userInfo);
    string bankCardNo = CatHelper.Request("bankcard");
    string credentialNo = CatHelper.Request("idcard");
    string token = CatHelper.Request("token");
}
@RenderPage("~/_layout/user/_Silder.cshtml", new { Data = userInfo, SilderMenu = "settings" })
<script>
    var _BankCard = "@bankCardNo";
    var _IdCard = "@credentialNo";
    var _token = "@token";
</script>
<div class="content">
    <div class="ctt-block page-reset-password">
        <h3 class="ctt-head"><span>重置支付密码</span></h3>
        <div class="ctt-rows">
            <p class="desc-password rds10">支付密码必须与登录密码不同！<br>密码为8~18位数字和字母的组合，区分大小写；不可为纯数字或纯字母。</p>
        </div>
        <div class="ctt-rows">
            <div class="ctt-rows-label"><span class="ui-asterisk">*</span>请输入新的支付密码</div>
            <input type="password" class="ui-text pwd-input" id="password" maxlength="18" />
        </div>
        <div class="ctt-rows">
            <div class="ctt-rows-label"><span class="ui-asterisk">*</span>请确认新的支付密码</div>
            <input type="password" class="ui-text pwd-input" id="vpassword" maxlength="18" />
        </div>
        <div class="ctt-rows">
            <button class="ui-btn ui-action" data-action="reset-payment3" id="">修改</button>
        </div>
    </div>
</div>