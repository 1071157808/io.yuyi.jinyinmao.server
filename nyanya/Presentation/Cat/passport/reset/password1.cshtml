@{
    Layout = "~/_layout/passport/_ResetSiteMain.cshtml";
    PageData["Title"] = "金银猫 - 大金融心服务 - 找回密码";
    Page.RequireMain = CatHelper.JsWrapper("<script src='/static/js/passport/resetpwd.js'></script>");
}
@section PageStyle {
    <link rel="stylesheet" href="/static/css/resetpwd.css" />
}
<div class="reset-container wrap-txt clearfix">
    <div class="reset-inner">
        <div class="reset-title">
            <h1>找回登录密码</h1>
        </div>
        <div class="reset-main">
            <ul class="reset-again-list reset-first">
                <li>
                    <label for="" class="lab">请输入注册手机号</label>
                    <input type="text" id="username" name="" placeholder="请输入手机号码" class="common-text phone-txt">
                    <input class="reset-btn" id="getCode" type="button" value="获取验证码" />
                    <span class="required-info"><i></i><em class="req">*</em><b></b></span>
                    <span class="msg-info"><em class="req">*</em>如果没有收到短信，请60秒后重新点击获取。</span>
                </li>
                <li class="code-li">
                    <label for="" class="lab">请输入验证码</label>
                    <input class="common-text reset-input" placeholder="请输入验证码" type="text" name="" id="code" />
                    <span class="required-info"><i></i><em class="req">*</em><b></b></span>
                </li>
            </ul>
            <div class="reset-path">
                <button class="login-btn next-btn disable-btn ui-action" id="resetBtn" data-action="reset-step1">下一步</button>
            </div>
        </div>
    </div>
</div>
<!--/container-->